<%= form_with(model: @portfolio, local: true) do |form| %>
<% if @portfolio.errors.any? %>
  <% @portfolio.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
  <% end %>
<% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload Main image<%= form.file_field :main_image, style: 'display:none' %>
        </label>
      </div>
      <div class="form-group">
        <label class="btn btn-primary">
          Upload Thumb image<%= form.file_field :thumb_image, style: 'display:none'%>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: '10'%>
      </div>
    </div>
  </div>
  <hr>
  <div class="col-md-12">
    <h2>Technologies</h2>
    <div class="form-group">
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
    </div>
    <!-- Link to add association provided by cocoon -->
    <div class="form-group pull-right">
      <%= link_to_add_association ' Add Technology', form, :technologies, class: 'fa fa-plus-square-o'  %>
    </div>
    <div class="form-group">
      <%= form.submit 'Submit', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
